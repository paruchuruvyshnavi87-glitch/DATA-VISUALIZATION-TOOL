import matplotlib.pyplot as plt

def visualize(data):
    labels = list(data.keys())
    values = list(data.values())

    plt.bar(labels, values)
    plt.title("Data Visualization")
    plt.xlabel("Category")
    plt.ylabel("Values")
    plt.show()

sample_data = {"A": 10, "B": 25, "C": 40, "D": 20}
visualize(sample_data)
